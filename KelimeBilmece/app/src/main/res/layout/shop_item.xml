<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:background="@drawable/linear_round_bg"
        android:padding="5dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewShopItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/linear_round_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/linear_round_bg2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewShopItemItemTitle"
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="500 Adet Can"
                    android:textColor="@color/customTextColor"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageViewShopItemItemImg"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY" />

                <Button
                    android:id="@+id/buttonShopItemItemPrice"
                    android:layout_width="113dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_round_bg_2"
                    android:text="20.99 TL"
                    android:textColor="@color/customTextColor"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@null" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>